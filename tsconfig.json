{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "types": ["jest","node"],
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "ts-node": {
    "esm": true,
  }
}

